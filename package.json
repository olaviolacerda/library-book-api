{
  "name": "library-book-api",
  "version": "1.0.0",
  "description": "A library book REST API.",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "seed": "sequelize db:seed:all",
    "migration:create": "sequelize migration:create --name",
    "migrate": "sequelize db:migrate",
    "prepare:database": "npm run migrate && npm run seed",
    "lint": "eslint --fix --report-unused-disable-directives src || exit 0"
  },
  "keywords": [
    "book",
    "library",
    "api",
    "nodejs",
    "jest",
    "eslint",
    "authentication",
    "jwt",
    "sequelize",
    "postgres",
    "sinon"
  ],
  "author": "Olavio Lacerda",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.1",
    "global": "^4.4.0",
    "helmet": "^3.21.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "ramda": "^0.26.1",
    "sequelize": "^5.21.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "sequelize-cli": "^5.5.1",
    "sequelize-mock": "^0.10.2",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  }
}
